<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/script/css/login/login_background.css" />
    <link rel="stylesheet" href="/script/css/login/account_style.css" />
    <title>Document</title>
  </head>
  <body>
    <% if(locals.account_info) { %> <% locals.account_info.forEach(i => { %>
    <input
      type="hidden"
      id="<%=i.id %>"
      class="<%=i.class %>"
      value="<%=i.error %>"
    />
    <% })} %>
    <div id="container" class="accountContainer">
      <div class="header">
        <a href="/" class="logo_title">TRIP</a>
      </div>
      <div class="content">
        <form class="account_form" method="POST">
          <!-- 아이디, 비밀번호 입력 -->
          <div class="userContainer">
            <div class="account_id account">
              <h4>
                <label for="userId">아이디</label>
              </h4>
              <div class="inputBox">
                <input
                  id="userId"
                  name="userId"
                  type="text"
                  placeholder="User ID"
                />
              </div>
              <span id="account_userId_errorMsg" class="errorMsg">#</span>
            </div>
            <div class="account_password account">
              <h4>
                <label for="password">비밀번호</label>
              </h4>
              <div class="inputBox">
                <input
                  id="password"
                  name="password"
                  type="password"
                  placeholder="Password"
                />
              </div>
              <span id="account_pwd_errorMsg" class="errorMsg">#</span>
            </div>
            <div class="account_password_check account">
              <h4>
                <label for="password_check">비밀번호 확인</label>
              </h4>
              <div class="inputBox">
                <input
                  id="password_check"
                  name="password_check"
                  type="password"
                  placeholder="Password check"
                />
              </div>
              <span id="account_pwd_check_errorMsg" class="errorMsg">#</span>
            </div>
          </div>
          <!-- 닉네임, 이메일 입력, 이메일 인증 -->
          <div class="userContainer">
            <div class="account_nickname account">
              <h4>
                <label for="nickname">닉네임</label>
              </h4>
              <div class="inputBox">
                <input
                  id="nickname"
                  name="nickname"
                  type="text"
                  placeholder="Nickname"
                />
              </div>
              <span id="account_nickname_errorMsg" class="errorMsg">#</span>
            </div>
            <!-- email 입력하는 것을 form 밖으로 -->
            <div class="account_email account">
              <h4>
                <label for="email">이메일</label>
              </h4>
              <div class="inputBox">
                <input
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Email"
                />
                <span id="sendCode">인증번호 받기</span>
              </div>
            </div>
            <div class="account_email_vertify account">
              <div class="inputBox">
                <input
                  id="emailCode"
                  name="emailCode"
                  type="text"
                  placeholder="Code"
                />
              </div>
              <span id="account_email_errorMsg" class="errorMsg">#</span>
            </div>
          </div>
          <!-- 제출 -->
          <div class="account_button">
            <button>회원가입</button>
          </div>
        </form>
      </div>
    </div>

    <%- include ('overlab_script.ejs') %>
    <script type="module" src="/script/js/login/account.js"></script>
  </body>
</html>
