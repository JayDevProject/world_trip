<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="login_background.css" />
    <link rel="stylesheet" href="account_style.css" />
    <title>Document</title>
  </head>
  <body>
    <% if(locals.info) { %> <% locals.info.forEach(i => { %>
    <input
      type="hidden"
      id="<%=i.id %>"
      class="<%=i.class %>"
      value="<%=i.error %>"
    />
    <% })} %>
    <div id="container" class="accountContainer">
      <a href="/">TRIP</a>
      <form class="accountForm" method="POST">
        <label for="userId">아이디</label>
        <input id="userId" name="userId" type="text" placeholder="User ID" />
        <span id="userId_errorMsg">#</span>
        <label for="password">비밀번호</label>
        <input
          id="password"
          name="password"
          type="password"
          placeholder="Password"
        />
        <span id="pwd_errorMsg">#</span>
        <label for="password_check">비밀번호 재확인</label>
        <input
          id="password_check"
          name="password_check"
          type="password"
          placeholder="Password check"
        />
        <span id="pwd_check_errorMsg">#</span>
        <label for="nickname">닉네임</label>
        <input
          id="nickname"
          name="nickname"
          type="text"
          placeholder="Nickname"
        />
        <span id="nickname_errorMsg">#</span>
        <label for="email">이메일</label>
        <input
          id="email"
          name="email"
          type="email"
          placeholder="email@trip.com"
        />
        <span id="email_errorMsg">#</span>
        <button class="accountBtn">회원가입</button>
      </form>
    </div>

    <%- include ('script.ejs') %>
    <script type="module" src="account.js"></script>
  </body>
</html>
